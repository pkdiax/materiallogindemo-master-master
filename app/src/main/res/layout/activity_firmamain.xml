<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FirmaMainActivity">


    <Button
        android:id="@+id/depokabul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:onClick="openFirmaDKabul"
        android:text="Depo Kabul" />

    <Button
        android:id="@+id/depocikis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/depokabul"
        android:layout_alignStart="@+id/depokabul"
        android:layout_below="@+id/depokabul"
        android:layout_marginTop="58dp"
        android:onClick="openFirmaDCikis"
        android:text="Depo Çıkış" />

    <Button
        android:id="@+id/parcasorgulama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/depocikis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:onClick="openFirmaSorgulama"
        android:text="Parça Sorgulama" />
</RelativeLayout>
